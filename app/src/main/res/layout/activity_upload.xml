<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activity.UploadActivity">

            <EditText
                android:id="@+id/edit_title"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:hint="업체명을 입력하세요"
                android:paddingStart="16dp"
                style="@style/TextThemeRound.15sp"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_post_title" />

            <TextView
                android:id="@+id/tv_post_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="업체 정보"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="top" />

            <TextView
                android:id="@+id/tv_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="업체명 "
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/view_post_divider" />

            <TextView
                android:id="@+id/tv_post_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="#000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_post_title"
                app:layout_constraintStart_toEndOf="@id/tv_post_title" />

            <TextView
                android:id="@+id/tv_post_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="카테고리"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/edit_title" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_category"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_rectangle_outline_8dp"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_post_category" />

            <TextView
                android:id="@+id/tv_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="일시 "
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/spinner_category" />

            <TextView
                android:id="@+id/tv_post_date_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="#000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_post_date"
                app:layout_constraintStart_toEndOf="@id/tv_post_date" />

            <TextView
                android:id="@+id/tv_post_date_start"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/rounded_rectangle_outline_8dp"
                android:hint="시작 날짜"
                android:drawableEnd="@drawable/calendar_ic"
                style="@style/TextThemeRound"
                app:layout_constraintWidth_percent="0.444"
                app:layout_constraintHeight_percent="0.085"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_post_date" />

            <TextView
                android:id="@+id/tv_post_date_end"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_rectangle_outline_8dp"
                android:hint="종료 날짜"
                android:drawableEnd="@drawable/calendar_ic"
                style="@style/TextThemeRound"
                app:layout_constraintWidth_percent="0.444"
                app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                app:layout_constraintHeight_percent="0.085"
                app:layout_constraintTop_toBottomOf="@id/tv_post_date" />

            <TextView
                android:id="@+id/tv_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="시간 "
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_post_date_start" />

            <TextView
                android:id="@+id/tv_post_time_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="#000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_post_time"
                app:layout_constraintStart_toEndOf="@id/tv_post_time" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_time_hour"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:hint="시"
                style="@style/TextThemeRound"
                app:layout_constraintWidth_percent="0.444"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_post_time" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_time_min"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:hint="분"
                style="@style/TextThemeRound"
                app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                app:layout_constraintWidth_percent="0.444"
                app:layout_constraintTop_toBottomOf="@id/tv_post_time" />

            <TextView
                android:id="@+id/tv_post_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="위치 "
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/spinner_time_hour" />

            <TextView
                android:id="@+id/tv_post_location_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="#000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_post_location"
                app:layout_constraintStart_toEndOf="@id/tv_post_location" />

            <TextView
                android:id="@+id/tv_post_select_location"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:hint="위치를 입력하세요"
                android:paddingStart="16dp"
                style="@style/TextThemeRound.15sp"
                android:drawableEnd="@drawable/search_ic"
                app:layout_constraintTop_toBottomOf="@id/tv_post_location"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

            <TextView
                android:id="@+id/tv_post_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="시급 "
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_post_select_location"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="#000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_post_payment"
                app:layout_constraintStart_toEndOf="@id/tv_post_payment" />


            <EditText
                android:id="@+id/edit_payment"
                style="@style/TextThemeRound.15sp"
                android:inputType="number"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:hint="숫자만 입력하세요"
                android:paddingStart="16dp"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_post_payment" />

            <TextView
                android:id="@+id/tv_post_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가 설명"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/edit_payment" />

            <EditText
                android:id="@+id/edit_etc"
                style="@style/TextThemeRound.15sp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="자유롭게 적어주세요 (최대 500자)"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:minHeight="44dp"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_post_etc" />

            <View
                android:id="@+id/view_post_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/white_two"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_post_info" />

            <View
                android:id="@+id/view_post_divider2"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginTop="32dp"
                android:background="@color/white_two"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/edit_etc" />

            <TextView
                android:id="@+id/tv_post_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 첨부"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/view_post_divider2"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                />

            <TextView
                android:id="@+id/tv_post_image_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="사진 추가"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_post_image"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintTop_toTopOf="@+id/tv_post_image" />

            <View
                android:id="@+id/view_post_divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/white_two"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_post_image" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_post_image"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/view_post_divider3"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                />

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="48dp"
                android:text="등록하기"
                android:layout_marginBottom="24dp"
                android:textSize="18sp"
                android:textColor="@color/warm_grey"
                android:background="@drawable/rounded_rectangle_8dp"
                android:backgroundTint="@color/white_four"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintTop_toBottomOf="@id/recycler_post_image"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.044" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.956" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.043" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>