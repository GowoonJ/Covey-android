<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gray_underbar_square"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_01_actionbar_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_01_actionbar_bottom">
    </RelativeLayout>

    <ImageView
        android:id="@+id/signup_01_arrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/icon_arrow"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_01_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_01_arrow_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_01_arrow_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_01_arrow_bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_01_arrow_bottom"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_01_title_left"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_01_arrow_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_01_text_bottom"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_01_left"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_01_text_top" />

    <EditText
        android:id="@+id/signup_01_phoneNum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gray_border_square"
        android:hint="'-'표시 없이 숫자만 입력하세요"
        android:paddingStart="16dp"
        android:textColorHint="#bdbdbf"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_01_edittext_bottom"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_01_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_01_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_01_edittext_top" />

    <RelativeLayout
        android:id="@+id/signup_01_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gray_square"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_01_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_01_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_01_button_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_01_button_bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="인증번호 전송"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_01_arrow_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.111"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_01_arrow_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.022"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_01_arrow_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_01_title_left"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.144"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_01_left"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.044"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_01_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.956"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_01_actionbar_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_01_actionbar_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.086"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_signup_01_text_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.138" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_01_text_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.175"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_signup_01_edittext_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_signup_01_edittext_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.268" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_signup_01_button_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.319" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_signup_01_button_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.396" />
</androidx.constraintlayout.widget.ConstraintLayout>