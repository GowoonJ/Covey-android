<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/TextTheme12sp.center"
        android:id="@+id/tv_load_name"
        android:text="도로명"
        app:layout_constraintWidth_percent="0.142"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TextTheme12sp.center"
        android:id="@+id/tv_load_num"
        android:text="지번"
        android:layout_marginTop="28dp"
        app:layout_constraintWidth_percent="0.142"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_load_name" />

    <TextView
        style="@style/TextTheme14sp"
        android:id="@+id/tv_address_name"
        android:layout_width="0dp"
        android:text="경기도 성남시 분당구 대왕판교로 606번길 10 (알파리움 1단지)"
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintTop_toTopOf="@+id/tv_load_name"
        app:layout_constraintWidth_percent="0.747" />

    <TextView
        style="@style/TextTheme14sp"
        android:id="@+id/tv_address_num"
        android:layout_width="0dp"
        android:text="경기도 성남시 분당구 백현동 531"
        app:layout_constraintBottom_toBottomOf="@+id/tv_load_num"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintTop_toTopOf="@+id/tv_load_num"
        app:layout_constraintWidth_percent="0.747" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.044" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.956" />

</androidx.constraintlayout.widget.ConstraintLayout>